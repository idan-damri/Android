<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:paddingTop="8dp"
    android:paddingStart="12dp"
    android:paddingBottom="12dp"
    android:paddingEnd="12dp"

    android:background="@drawable/others_message_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        tools:text="sason gabai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textIsSelectable="true"
        android:autoLink="all"
        android:textColorLink="@color/color_link_text"
        app:layout_constraintTop_toBottomOf="@id/name_textview"
        app:layout_constraintStart_toStartOf="parent"

        tools:text="this is a message"
        />

    <TextView
        android:id="@+id/time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginStart="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/message_textview"
        app:layout_constraintBottom_toBottomOf="@id/message_textview"
        android:textColor="@android:color/darker_gray"
        tools:text="16:00"
        />




</androidx.constraintlayout.widget.ConstraintLayout>